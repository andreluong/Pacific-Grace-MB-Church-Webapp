<% if(blogs.length) { 
    for(var i=0; i < blogs.length; i++) { %> 
        <div class="form-group">
            <label for="title">Title</label>
            <input required type="text" value="<%= blogs[0].title %>" name="title" id="title" class="form-control">

        </div>

        <div class="form-group">
            <label for="summary">Summary</label>
            <textarea name="summary" id="summary" class="form-control"><%= blogs[i].summary %></textarea>
        </div>

        <div class="form-group">
            <label for="content">Content</label>
            <textarea required name="content" id="content" class="form-control"><%= blogs[i].content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
    <% } 
} %>