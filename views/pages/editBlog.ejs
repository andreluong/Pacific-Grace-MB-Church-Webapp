    <script>tinymce.init({selector:'textarea'});</script>

     <% if (blogs.length > 0) { %>
        <title>Edit <%= blogs[0].title %></title> 
    <% } %>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Edit Blog</h1>
        <% if(blogs.length) { 
            for(var i=0; i < blogs.length; i++) { %> 
                <form action="/blog/edit/<%= blogs[i].title %>" method="post">
                    <%- include("../partials/blog_form.ejs") %>  
                </form>
            <% }
        }%>
    </div>

</body>
</html>